<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners
                            android:radius="4dp" />
                    <solid
                            android:color="@color/preto" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                            android:angle="0"
                            android:endColor="@color/cor_azul_botao"
                            android:startColor="@color/cor_azul_botao" />
                    <corners
                            android:radius="0dp" />
                    <padding
                            android:bottom="10dp"
                            android:left="10dp"
                            android:right="10dp"
                            android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>