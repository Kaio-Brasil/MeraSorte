<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners
                            android:radius="6dp" />
                    <solid
                            android:color="@color/cinza" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                            android:angle="0"
                            android:endColor="@color/cor_verde_botao"
                            android:startColor="@color/cor_verde_botao" />
                    <stroke
                            android:width="1dp"
                            android:color="@color/cinza_medio" />
                    <corners
                            android:radius="5dp" />
                    <padding
                            android:bottom="10dp"
                            android:left="10dp"
                            android:right="10dp"
                            android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>